extends ./layout.jade

block content
	.container
		.row
			.col-xs-12.col-sm-1.col-md-1
			.col-xs-12.col-sm-3.col-md-2
				.btn-group-vertical
						button.btn.btn-default.newRoom.roomBtn.template(type='button')
				.btn-group-vertical.roomContainer
					button.btn.btn-default.showall(type='button' data-name='all') show all
					each room in rooms
						button.btn.btn-default.roomBtn(type='button' data-id='#{room.id}')= room.name
				br
				br
				button.btn.btn-success.addRoom(type='button') add a room
				hr
			//- .col-sm-1
			.col-xs-12.col-sm-8.col-md-9
				.itemContainer
					.table-responsive
						table.table.table-hover
							thead
								tr
									th item
									th value($)
									th category
									th 
							thead.addItemTHead
								form.addItemForm
									tr
										th 
											input.itemName(placeholder="item name" name="name" type='text' required)
										th 
											input.itemValue(placeholder="item value" name="value" type='number' required)
										th 
											input.itemCategory(placeholder="item category" name="category" type='text')
										th
											button.add(class="btn btn-primary btn-xs" type="submit") add item to this room
							tbody.itemsTable
							tr.newItem.template.item
								th.name(scope='row')
								td.value
								td.category
								td
									button.edit(class="btn btn-primary btn-xs") edit
									button.delete(class="btn btn-danger btn-xs") delete
							tr.oldItem.template.item
								th.name(scope='row')
								td.value
								td.category
								td
									button.edit(class="btn btn-primary btn-xs") edit
									button.delete(class="btn btn-danger btn-xs") delete
	.addRoomDiv
		.container
			.row
				.col-xs-12.col-sm-4
				.col-xs-12.col-sm-4
					form.addRoomForm
								h4 Add a Room
								input(class="name form-control" placeholder="Room name" name="name" required)
								br
								button(type='submit' class="btn btn-block btn-success btn-md") Add
								br
								.cancel(class="btn btn-block btn-default") Cancel
	.editRoomDiv
		.container
			.row
				.col-xs-12.col-sm-4
				.col-xs-12.col-sm-4
					form.editRoomForm.editterForm
								h4 Edit Room
								//- input(class="name form-control" placeholder="Room name" name="name" required)
								//- br
								//- button(type='submit' class="update btn btn-block btn-success btn-md") Update
								br
								.delete(class="btn btn-block btn-danger btn-md") Delete room
								br
								.cancel(class="btn btn-block btn-default") Cancel
	.editItemDiv
		.container
			.row
				.col-xs-12.col-sm-4
				.col-xs-12.col-sm-4
					form.editItemForm.editterForm
								h4 Edit Item
								p name
									input(class="name form-control" placeholder="Item name" name="name" required)
								br
								p value($)
									input(class="value form-control" placeholder="Item value($)" name="value" type="number" required)
								br
								p category
									input(class="category form-control" placeholder="Item category" name="category" type="text")
								br
								button(type='submit' class="btn btn-block btn-primary btn-md") Update 
								br
								.cancel(class="btn btn-block btn-default") Cancel
